<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <pl.polidea.view.ZoomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/activity_area_personal"
                android:layout_width="match_parent"
                android:layout_height="567dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.graos.auditory_scanning_final_project.AreaPersonalActivity">


                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="17dp"
                    android:foregroundGravity="center"
                    app:srcCompat="@mipmap/ic_select"
                    android:layout_below="@+id/imageView7"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView20"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="46dp"
                    android:text="@string/tittle_patients"
                    android:textDirection="ltr"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_show"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:popupBackground="#E7FEFF"
                    android:textDirection="ltr"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="70dp"
                    android:layout_height="62dp"
                    android:onClick="addPatient"
                    app:srcCompat="@mipmap/ic_add1"
                    android:layout_below="@+id/textView8"
                    android:layout_toStartOf="@+id/imageView20"
                    android:layout_marginEnd="7dp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:onClick="help_personal_area_activity"
                    app:srcCompat="@mipmap/ic_help3" />


                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="15dp"
                    android:onClick="press_next"
                    app:srcCompat="@mipmap/ic_next"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imageView21"
                    android:layout_alignEnd="@+id/imageView21"
                    android:layout_alignStart="@+id/imageView21"
                    android:gravity="center"
                    android:text="@string/tittle_button_next"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    app:srcCompat="@mipmap/ic_remove_patient"
                    android:onClick="remove_patient"
                    android:layout_above="@+id/textView"
                    android:layout_toEndOf="@+id/imageView20" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imageView10"
                    android:gravity="center"
                    android:text="@string/tittle_remove_pat"
                    android:layout_alignStart="@+id/imageView10"
                    android:layout_alignEnd="@+id/imageView10" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imageView10"
                    android:gravity="center"
                    android:layout_alignStart="@+id/imageView22"
                    android:text="@string/tittle_button_add"
                    android:layout_alignEnd="@+id/imageView22" />


            </RelativeLayout>
        </LinearLayout>
    </pl.polidea.view.ZoomView>
</ScrollView>

