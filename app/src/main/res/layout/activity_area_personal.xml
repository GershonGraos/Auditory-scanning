<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <pl.polidea.view.ZoomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/activity_area_personal"
                android:layout_width="match_parent"
                android:layout_height="567dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.graos.auditory_scanning_final_project.AreaPersonalActivity">


                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_above="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="46dp"
                    android:foregroundGravity="center"
                    app:srcCompat="@mipmap/ic_select" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="@string/tittle_patients"
                    android:textDirection="ltr"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_show"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="31dp"
                    android:gravity="center"
                    android:popupBackground="#E7FEFF"
                    android:textDirection="ltr"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="14dp"
                    android:onClick="addPatient"
                    app:srcCompat="@mipmap/ic_add1"
                    android:layout_alignTop="@+id/imageView23"
                    android:layout_toRightOf="@+id/textView3"
                    android:layout_toEndOf="@+id/textView3" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/spinner_show"
                    android:layout_marginTop="29dp"
                    android:layout_toLeftOf="@+id/textView3"
                    android:layout_toStartOf="@+id/textView3"
                    android:onClick="sharePatient"
                    app:srcCompat="@mipmap/ic_share" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:onClick="help_personal_area_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imageView20"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="13dp"
                    app:srcCompat="@mipmap/ic_help3" />

                <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:onClick="view_db_patients"-->
                <!--android:text="View patientsDB"-->
                <!--android:visibility="invisible" />-->


            </RelativeLayout>
        </LinearLayout>
    </pl.polidea.view.ZoomView>
</ScrollView>

    <!--android:popupBackground="@android:color/transparent"-->
